{
  "compilerOptions": {
    "outDir": "build",
    "allowJs": true,
    "module": "commonjs",
    "target": "es2017",
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "inlineSources": true,
    "strict": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ]
}
